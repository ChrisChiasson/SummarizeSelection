{
  "action": {
    "title": "Summarize Selection in OpenAI ChatGPT"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true
  }],
  "description": "Summarize selected text in OpenAI ChatGPT. I am not affiliated with OpenAI. You must be logged in to ChatGPT.",
  "host_permissions": ["https://chat.openai.com/"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },  
  "manifest_version": 3,
  "name": "Summarize Selection in OpenAI ChatGPT",
  "permissions": ["activeTab", "scripting", "tabs"],
  "version": "1.0.0"
}
